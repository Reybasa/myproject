# Length conversion program

# Function to convert meters to other units
def convert_meters(length):
    print("1. Centimeters")
    print("2. Miles")
    print("3. Yards")
    print("4. Feet")
    print("5. Inches")
    choice = input("Select the unit to convert to (1/2/3/4/5): ")
    if choice == '1':
        return length * 100
    elif choice == '2':
        return length * 0.000621371
    elif choice == '3':
        return length * 1.09361
    elif choice == '4':
        return length * 3.28084
    elif choice == '5':
        return length * 39.3701
    else:
        print("Invalid choice!")
        return None

